@{
     
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Localization;



@using Newtonsoft.Json.Linq;
@model IEnumerable<MediaOutDoor.Models.TblSlider>

@inject IViewLocalizer Localizer

<!-- Hero Section Begin -->
<section class="hero">
    <div class="hero__slider owl-carousel">

        @foreach (var slider in Model)
        {
            JObject jsonStyling = new JObject();

            if (!string.IsNullOrEmpty(slider.HtmlStyling))
            {
                jsonStyling = JObject.Parse(slider.HtmlStyling);
            }

            <div class="hero__items set-bg" data-setbg="@slider.Image">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h2 id="hero1txt" style="color: @(jsonStyling["headingcolor"] ?? "#fff");"> @slider.Heading   </h2>
                                <p style="font-weight:600; color: @(jsonStyling["textcolor"] ?? "#fff");">
                                    @slider.Text
                                </p>
                                <a href="#mapSection" class="primary-btn">@Localizer["BookNow"] <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
<!-- Hero Section End -->
<section class="contact spad">
