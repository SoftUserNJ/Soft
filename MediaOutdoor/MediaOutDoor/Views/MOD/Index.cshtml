    </div>
    <div id="sidebarFooter">
    </div>
    <div style="padding-left: 12px; padding-bottom:10px; position:absolute;bottom:0">
        <button type="button" class="btn btn-info" onclick="navigateToDesign()" style="padding-left: 20px;padding-right: 20px;font-size:14px" id="designButton">Proceed To Design</button>
        <button type="button" class="btn btn-info" onclick="navigateToDesignMV()" style="padding-left: 20px;padding-right: 20px;font-size:14px;" id="designButtonMV">Proceed To Design</button>
        <button type="button" onclick="navigateToCart()" class="btn btn-success" style="margin-left:10px;"><img src="~/img/icon/cart.png" /></button>
        
    </div>


</div>


<!-- Product Section End -->
