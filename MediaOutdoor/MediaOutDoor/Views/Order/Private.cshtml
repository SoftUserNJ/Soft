@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer

@model IEnumerable<MediaOutDoor.Models.TblContentCat>


@{
    ViewData["Title"] = "Private Category";
}

<style>
    .card {
        /*background-color: #f3f2ee;*/
        border-radius: 8px;
        /*background: linear-gradient(to bottom left, #cc00cc 0%, #cc0066 100%);*/
        background: linear-gradient(to bottom left, #0d091f 0%, #d6d6d6 100%);

    }

    .box-shadow {
        box-shadow: 1px 1px 11px 1px #1a2774;
    }

</style>

<div class="container row mx-auto mt-5">

    <div class="col-md-3 col-lg-3 col-sm-12 mb-3">

        <a asp-controller="mod" asp-action="index" asp-fragment="mapSection">
            <div class="card box-shadow">
                <div class="card-body d-flex py-5" style=" height: 200px; width: 100%;">

                    <div class="mr-2">
                        <div style="width: 100%;">
                            <img src="~/img/favicon.png" style="max-width: 54px; max-height: 54px;" />
                        </div>
                    </div>

                    <h4 class="font-weight-bold text-white">Upload your own design/photo</h4>
                </div>
            </div>
        </a>

    </div>

    @foreach (var cat in Model)
    {
        <div class="col-md-3 col-lg-3 col-sm-12 mb-3">
            <a asp-controller="order" asp-action="PrivateDetail" asp-route-id="@cat.CatId">
                <div class="card box-shadow">
                    <div class="card-body d-flex py-5" style=" height: 200px; width: 100%;">

                        @if (!string.IsNullOrEmpty(cat.Icon))
                        {
                            Random rand = new Random();
                            var vCode = @cat.Icon +"?random="+rand.Next(100000, 999999);

                            <div class="mr-2">
                                <div style="max-width: 54px; max-height: 54px;">

                                    <img src="@vCode" style="width: 54px; height: 54px;" />

                                </div>
                            </div>
                        }

                        <h4 class="font-weight-bold text-white">@cat.Category</h4>
                    </div>
                </div>
            </a>
        </div>
    }

</div>




