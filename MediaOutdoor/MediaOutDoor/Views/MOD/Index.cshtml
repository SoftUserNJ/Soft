                    <div style=" padding-left: 20px; padding-right: 10px; "> <div class="input-group"> <div class="form-outline"> <input type="search" id="searchMapsBtn" class="form-control"> </div> <button style=" margin-left: 4px; " type="button" class="btn btn-primary"> <i class="fas fa-search"></i> </button> </div> </div>
                    <div style="padding:30px;" id="SearchMapLocations">

                    </div>
                </div>
            </div>
            <div class="col-lg-9 p-0"><div id="map"></div></div>
        </div>
    </div>
</section>

