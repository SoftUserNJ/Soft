                    <h2 style=" font-weight: 600; ">102</h2>
                    <h6 style="font-family: 'Montserrat'; letter-spacing: 2px;">
                        @Localizer["OurClients"]
                    </h6>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <img src="~/img/icon/station.png" style=" height: 50px; margin-bottom: 10px;" />
                    <h2 style=" font-weight: 600; ">30</h2>
                    <h6 style="font-family: 'Montserrat'; letter-spacing: 2px;">
                        @Localizer["TotalStations"]
                    </h6>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <img src="~/img/icon/locations.png" style=" height: 50px; margin-bottom: 10px;" />
                    <h2 style=" font-weight: 600; ">102</h2>
                    <h6 style="font-family: 'Montserrat'; letter-spacing: 2px;">
                        @Localizer["TotalLocations"]
                    </h6>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <img src="~/img/icon/Happy.png" style=" height: 50px; margin-bottom: 10px;" />
                    <h2 style=" font-weight: 600; ">98 %</h2>
                    <h6 style="font-family: 'Montserrat'; letter-spacing: 2px;">
                        @Localizer["HappyCustomer"]
