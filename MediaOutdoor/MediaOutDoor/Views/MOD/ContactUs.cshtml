@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Contact Us";
}


<style>
    .masthead {
        height: 100vh;
        min-height: 200px;
        max-height: 350px;
        background-image: url('/img/contact-us-for-show-ads.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .masthead::before {
            content: "";
            background: rgba(0, 0, 0, 0.5);
            position: absolute;
            top: 129px;
            left: 0;
            width: 100%;
            height: 350px;
        }

</style>

<!-- Full Page Image Header with Vertically Centered Content -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12 text-center">
                <h1 class="fw-light">@Localizer["ContactUs"]</h1>
                @*<p class="lead">A great starter layout for a landing page</p>*@
            </div>
        </div>
    </div>
</header>

<div class="container text-white my-5">
    <div class="row">
        <div class="col-md-5 col-lg-5">
            <form asp-controller="MOD" asp-action="ContactUs" method="post">
                <div class="form-group">
                    <label for="inputEmail4">@Localizer["Name"] <span class="text-danger">*</span></label>
                    <input required type="text" class="form-control" name="name" placeholder="@Localizer["Name"]">
                </div>

                <div class="form-group">
                    <label for="inputPassword4">@Localizer["Email"] <span class="text-danger">*</span></label>
                    <input required type="email" class="form-control" name="email" placeholder="@Localizer["Email"]">
                </div>

                <textarea required class="rounded p-3" placeholder="@Localizer["Message"]" name="message" style="height:232px; width: 100%;"></textarea>
                
                @if (ViewBag.Error != "")
                {
                    <div class="text-center mb-1">
                        <span class="text-danger p-pad">@ViewBag.Error</span>
                    </div>
                }

                @if (ViewBag.Success != "")
                {
                    <div class="text-center mb-1">
                        <span class="text-success p-pad">@ViewBag.Success</span>
                    </div>
                }
                
                <button type="submit" class="btn btn-success">@Localizer["Send"]</button>
            </form>
        </div>
        <div class="col-md-7 col-lg-7">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2436.9545520889724!2d4.854667275791606!3d52.35310954857337!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c5e2046c847f8f%3A0x964ba58173039ce3!2sWaldeck%20Pyrmontlaan%2020%2C%201075%20BX%20Amsterdam%2C%20Netherlands!5e0!3m2!1sen!2s!4v1697284902647!5m2!1sen!2s" width="650" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

</div>