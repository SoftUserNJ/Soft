                                <li><a asp-controller="Content" asp-action="ContentCategory">@Localizer["CATEGORY"]</a></li>
                                <li><a asp-controller="Content" asp-action="ContentDetail">@Localizer["DETAIL"]</a></li>
                            </ul>
