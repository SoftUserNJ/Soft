    Layout = null;
}

<div class="modal-dialog" style="max-width:800px;">
    <div class="modal-content">
        @*<div class="modal-header p-2 align-items-center">
        <h5 class="modal-title">User Types</h5>
        <button type="button" class="close fs-30" data-bs-dismiss="modal" aria-label="Close">&times;</button>
        </div>*@
        <div class="modal-body p-0">
            <div class="card mb-0">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <h3>Objects</h3>
                        <button type="button" class="btn-close1 ms-auto" data-bs-dismiss="modal"></button>
                    </div>
                    <hr style="margin-top: 0;margin-bottom: 10px;">
                    <div class="row">

                        <div class="form-group col-md-4 col-lg-4 col-sm-12 mb-2">
                            <label class="form-label">Objects</label>
                            <input type="text" class="form-control rounded-pill" id="txtObjects" skinid="Enter Object....!">
                            <input type="hidden" id="txtObjectsId">
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group mb-2">
                                <label>Location</label>
                                <select class="js-example-basic-single select2" id="drpObjLocation" skinid="Select Location....!"></select>
                            </div>
                        </div>

                    </div>
                    <div class="mb-2">
                        <button class="ct-btns btn btn-primary btn-sm" id="btnNewObject">New</button>
                        <button class="ct-btns btn btn-success btn-sm" id="btnSaveObject">Save</button>
                        <button class="ct-btns btn btn-secondary btn-sm" id="btnRefreshObject">Refresh</button>
                    </div>
                    <div class="card mb-0 pt-2 pb-1 scroll">
                        <div class="table-responsive p-2 pt-0 pb-0">
                            <table class="table text-white table-hover">
                                <thead>
                                    <tr>
                                        <th class="ps-1 partial-head-leftr">Id</th>
                                        <th class="">Object</th>
                                        <th class="">Customer</th>
                                        <th class="">Location</th>
                                        <th class="text-center partial-head-rightr last-th-sticky">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="objectsList">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

